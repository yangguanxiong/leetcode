public class Solution {
    public ArrayList<ArrayList<Integer>> combinationSum(int[] candidates, int target) {
        ArrayList<ArrayList<Integer>> result = new ArrayList<ArrayList<Integer>>();
        ArrayList<Integer> sub = new ArrayList<Integer>();
        Arrays.sort(candidates);
        combinationSum(candidates, target, result, sub, 0);
        return result;
    }
    
    public void combinationSum(int[] num, int target, ArrayList<ArrayList<Integer>> result, ArrayList<Integer> sub, int idx){
        if (target == 0){
            ArrayList<Integer> clone = new ArrayList<Integer>(sub);
            result.add(clone);
        }
        for (int i = idx ; i < num.length && target >= num[i]; i++){
            sub.add(num[i]);
            combinationSum(num, target - num[i], result, sub, i);
            sub.remove(sub.size() - 1);
        }
    }
}
