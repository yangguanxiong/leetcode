 public int maxArea(int[] height) {
      if ( height.length < 2) return 0;
            
	        int maxA = 0;
	        int l1 = 0;
	        int l2 = height.length - 1;
	        while(l1 < l2){
	        	maxA = Math.max(maxA, (l2 - l1) * (height[l1]>height[l2] ? height[l2] : height[l1]));
	        	if (height[l1] < height[l2]){
	        		l1 ++;
	        	} else {
	        		l2--;
	        	}
	        }
	        return maxA;
        
        
        
        
    }
